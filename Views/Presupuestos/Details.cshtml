@using Sistema.Web.Models
@model Presupuestos
@using System.Globalization
@{
    var fechaLarga = ViewBag.FechaLarga as string;
    var totalFmt = ViewBag.TotalFmt as string;
    var ar = new CultureInfo("es-AR");
}

<div class="p-2">
    <div class="d-flex gap-2 my-3">
        <a asp-controller="Presupuestos" asp-action="Index" class="btn btn-outline-dark d-flex gap-2 border border-0"><i class="bi bi-arrow-left"></i>volver</a>
    </div>
    <h1 class="fw-bolder">Presupuestos #@Model.idPresupuesto</h1>
    <span class="text-secondary fw-semibold">Detalles del presupuesto y productos relacionados</span>

    <div class="row row-cols-1 row-cols-md-3 g-4 my-5">
        <div class="col mt-0">
            <div class="card border rounded-3 h-100 p-2">
            <div class="card-body">
                <div class="text-muted small mb-1">Cliente</div>
                <div class="h4 fw-bold mb-0">@Model.nombreDestinatario</div>
            </div>
            </div>
        </div>

        <div class="col mt-0">
            <div class="card border rounded-3 h-100 p-2">
            <div class="card-body">
                <div class="text-muted small mb-1">Fecha</div>
                <div class="h4 fw-bold mb-0">@fechaLarga</div>
            </div>
            </div>
        </div>

        <div class="col mt-0">
            <div class="card border rounded-3 h-100 p-2">
            <div class="card-body">
                <div class="text-muted small mb-1">Total</div>
                <div class="h4 fw-bold mb-0 text-primary">@totalFmt</div>
            </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
    <h4 class="fw-bold">Productos Relacionados</h4>
        <div class="d-flex justify-content-end">
            <a asp-controller="Presupuestos" asp-action="AgregarProducto" asp-route-id="@Model.idPresupuesto" class="btn btn-primary"><i class="bi bi-plus me-2"></i>Agregar producto</a>   
        </div>
    </div>
    
    @if (Model?.detalle == null || Model.detalle.Count == 0)
    {
        <div class="col mt-2">
            <div class="card border rounded-3 h-100 p-2">
            <div class="card-body p-4 d-flex flex-column gap-2 justify-content-center align-items-center">
                <div><i class="bi bi-box-seam text-secondary h1"></i></div>
                <div class="h5 fw-bold mb-0">Sin productos relacionados</div>
                <div class="text-muted small mb-1">Este presupuesto no tiene productos asociado</div>
            </div>
            </div>
        </div>
    }
    else
    {   
        <div class="table-responsive rounded-4 overflow-hidden border shadow-sm mt-3">
            <table class="table table-hover align-middle mb-0 table-spacious">
                <thead>
                    <th scope="col" class="text-secondary py-3 px-4">#</th>
                    <th scope="col" class="text-secondary py-3 px-4">Producto</th>
                    <th scope="col" class="text-secondary py-3 px-4">Precio</th>
                    <th scope="col" class="text-secondary py-3 px-4">Cantidad</th>
                </thead>
                <tbody>
                    
                    @foreach (PresupuestosDetalle detalle in Model.detalle)
                    {
                        <tr>
                            <td scope="row" class="py-3 px-4">@detalle.producto.idProducto</td>
                            <td class="py-3 px-4">@detalle.producto?.descripcion</td>
                            <td class="py-3 px-4 text-primary fw-bold">
                                @detalle.producto.precio.ToString("C0", ar)
                            </td>
                            <td class="py-3 px-4">@detalle.cantidad</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }