@using Sistema
@model List<Productos>

<div class="p-2">
    <h1>Productos</h1>
    <span>Lista de los productos</span>
    <div class="d-flex justify-content-end">
        <a asp-controller="Productos" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus me-2"></i>Crear Producto</a>
    </div>

    <div class="table-responsive rounded-3 overflow-hidden border mt-3 shadow-sm">
        <table class="table table-hover table-sm mb-0">
            <thead>
                <tr class="table-primary">
                    <th scope="col">#</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Precio</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var producto in Model)
                {
                    <tr>
                        <th scope="row">@producto.idProducto</th>
                        <td>@producto.descripcion</td>
                        <td>$ @producto.precio</td>
                        <td>
                            <div class="d-flex justify-content-evenly">
                                <a asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.idProducto" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                                <a asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.idProducto" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>