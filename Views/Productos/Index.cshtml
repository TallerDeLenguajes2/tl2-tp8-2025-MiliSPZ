@using Sistema
@model List<Productos>

<div class="p-2">
    <h1 class="fw-bolder">Productos</h1>
    <span class="text-secondary fw-semibold">Lista de los productos</span>

    <div class="d-flex justify-content-end">
        <a asp-controller="Productos" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus me-2"></i>Crear Producto</a>
    </div>

    <div class="table-responsive rounded-4 overflow-hidden border mt-5 shadow-sm">
        <table class="table table-hover align-middle mb-0 table-spacious">
            <thead>
                <tr>
                    <th scope="col" class="text-secondary py-3 px-4 fw-normal">#</th>
                    <th scope="col" class="text-secondary py-3 px-4 fw-normal">Descripcion</th>
                    <th scope="col" class="text-secondary py-3 px-4 fw-normal">Precio</th>
                    <th scope="col" class="text-end text-secondary py-3 px-4 fw-normal">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <td scope="row" class="py-3 px-4">@producto.idProducto</td>
                        <td class="py-3 px-4">@producto.descripcion</td>
                        <td class="py-3 px-4">$ @producto.precio</td>
                        <td class="py-3 px-4">
                            <div class="d-flex justify-content-end gap-3">
                                <a asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.idProducto" class="btn btn-outline-secondary"><i class="bi bi-pencil-square"></i></a>
                                <a asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.idProducto" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>