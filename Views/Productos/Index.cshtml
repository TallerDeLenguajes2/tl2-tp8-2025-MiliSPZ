@using Sistema
@model List<Productos>

<div class="d-flex justify-content-end">
    <a asp-controller="Productos" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>Crear Producto</a>
</div>
<table class="table">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Precio</th>
        <th scope="col text-center">Acciones</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var producto in Model)
        {
            <tr>
                <th scope="row">@producto.idProducto</th>
                <td>@producto.descripcion</td>
                <td>$ @producto.precio</td>
                <td>
                    <div class="d-flex justify-content-evenly">
                        <a asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.idProducto" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.idProducto" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>